<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainColor">
        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/subColor"
            android:textSize="12sp"
            android:text="test_date"/>
        <TextView
            android:id="@+id/txt_content"
            android:background="@drawable/postbox_textview_edge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_below="@+id/txt_date"
            android:padding="15dp"
            android:text="text_test_content"/>

        <TextView
            android:id="@+id/txt_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_alignLeft="@+id/txt_content"
            android:textColor="@color/black"
            android:text="@string/reply"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_reply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/txt_reply"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
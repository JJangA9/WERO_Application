<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainColor"
        android:clickable="true"
        android:focusable="true">
        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:text="21.02.09"/>
        <TextView
            android:id="@+id/txt_content"
            android:background="@drawable/postbox_textview_edge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_below="@+id/txt_date"
            android:padding="15dp"
            android:textSize="12sp"
            android:text="text_test_content"/>
        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/txt_content"
            android:layout_alignBottom="@+id/txt_date"
            android:padding="0dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:text="@string/edit"/>

        <TextView
            android:id="@+id/txt_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_alignLeft="@+id/txt_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:text="@string/reply"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_reply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/txt_reply"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp"
    android:background="@color/mainColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/mailImage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/email"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="13dp"
        android:text="나힘들어"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/mailImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userIDAddTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="7dp"
        android:text="님의 위로"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/nickName"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_heart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/everywero_heartbutton"
        app:layout_constraintRight_toLeftOf="@id/heartNumber"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/heartNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/postboxTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="코로나 때문에 힘들다\n곱창 족발 껍데기 닭발 ! ! ! !"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/postbox_textview_edge"
        app:layout_constraintTop_toBottomOf="@id/mailImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>
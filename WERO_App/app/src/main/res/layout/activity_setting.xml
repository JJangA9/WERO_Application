<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainColor"
    android:padding="25dp"
    tools:context=".Setting">

    <TextView
        android:id="@+id/profileSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 설정"
        android:textSize="12sp"
        android:textColor="#9A9A9A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/profileSetting"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/font"
        android:text="수정"
        android:textColor="#03A9F4"
        android:background="#00ff0000"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="@id/nickname"
        app:layout_constraintTop_toBottomOf="@id/profileSetting" />

    <TextView
        android:id="@+id/nicknameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="고민들어줘"
        android:textSize="15sp"
        android:textColor="#5C5C5C"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/nickname"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/firstLine"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#9A9A9A"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/nicknameTxt"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/alarmSettingTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 설정"
        android:textSize="12sp"
        android:textColor="#9A9A9A"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/firstLine"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/alarmSettingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/alarmSettingTxt"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="앱 푸시 알림"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Switch
            android:id="@+id/alarmSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"/>

    </LinearLayout>

    <View
        android:id="@+id/secondLine"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#9A9A9A"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/alarmSettingLayout"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/backgroundColorTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배경 설정"
        android:textSize="12sp"
        android:textColor="#9A9A9A"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/secondLine"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/backgroundSettingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/backgroundColorTxt"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배경 색상"
            android:textColor="@color/black"
            android:textSize="18sp"/>

    </LinearLayout>

    <View
        android:id="@+id/thirdLine"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#9A9A9A"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/backgroundSettingLayout"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/WEROInfoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WERO 정보"
        android:textSize="12sp"
        android:textColor="#9A9A9A"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/thirdLine"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/WEROInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/WEROInfoTxt"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WERO 버전"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v1.0"
                android:textColor="#9A9A9A"
                android:textSize="18sp"
                android:layout_marginEnd="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인정보 처리방침"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/information"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/fourthLine"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#9A9A9A"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/WEROInfoLayout"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/logoutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fourthLine"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/logoutTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/door"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>